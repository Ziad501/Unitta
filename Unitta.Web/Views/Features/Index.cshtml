@model IEnumerable<Unitta.Application.DTOs.FeatureDto>

@{
    ViewData["Title"] = "Features";
}

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the feature: <strong id="featureNameToDelete"></strong>?
                <p class="text-danger mt-2">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="featureIdToDelete" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="w-75 card container d-flex justify-content-center border-0 p-4">
    <div class="card-body border p-4">
        <div class="card-header bg-transparent border-bottom">
            <div class="d-flex justify-content-center align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-card-list me-2"></i>Features List
                </h3>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-6 offset-6 text-end">
                <a class="btn btn-secondary" asp-controller="Features" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Create New Feature
                </a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Associated Unit</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <button type="button" class="btn btn-danger mx-2" data-bs-toggle="modal"
                                        data-bs-target="#deleteModal" data-feature-id="@item.Id" data-feature-name="@item.Name">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_Notification" />
    <script>
        // The JavaScript for the modal remains the same.
        document.addEventListener('DOMContentLoaded', function () {
            var deleteModal = document.getElementById('deleteModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var featureId = button.getAttribute('data-feature-id');
                var featureName = button.getAttribute('data-feature-name');

                var modalBodyName = deleteModal.querySelector('#featureNameToDelete');
                var hiddenInput = deleteModal.querySelector('#featureIdToDelete');

                modalBodyName.textContent = featureName;
                hiddenInput.value = featureId;
            });
        });
    </script>
}