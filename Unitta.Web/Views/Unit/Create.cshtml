@model UnitCreateDto
@{
    ViewData["Title"] = "Create";
}

<div class="container w-50 card border-0 p-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2"><i class="bi bi-plus-circle"></i> Create Unit</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="form-floating py-2 col-12">
                <input asp-for="Name" class="form-control border shadow" />
                <label asp-for="Name" class="ms-2">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" class="form-control border shadow" />
                <label asp-for="Price" class="ms-2">Price</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Occupancy" class="form-control border shadow" />
                <label asp-for="Occupancy" class="ms-2">Occupancy</label>
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <textarea asp-for="Description" class="form-control border shadow"></textarea>
                <label asp-for="Description" class="ms-2">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Sqft" class="form-control border shadow" />
                <label asp-for="Sqft" class="ms-2">Area</label>
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                @* <input asp-for="ImageUrl" class="form-control border shadow" /> *@
                <input asp-for="Image" class="form-control border shadow" />
                <label asp-for="Image" class="ms-2">Image Url</label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="col-12 text-end py-2">
                <button type="submit" class="btn btn-success shadow">
                    <i class="bi bi-file-plus"></i> Create
                </button>
                <a asp-controller="Unit" asp-action="Index" class="btn btn-secondary shadow">
                    <i class="bi bi-x-circle"></i> back
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
}
