@model Unitta.Application.DTOs.BookingDto
@{
    ViewData["Title"] = "Finalize Booking";
}

@* Custom Styles and Animations for this view *@
<style>
    .card-animated {
        animation: fadeInUp 0.7s ease-out forwards;
    }

    .animated-item {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out forwards;
    }

    .form-control:focus {
        border-color: var(--bs-success);
        box-shadow: 0 0 0 0.25rem rgba(var(--bs-success-rgb), 0.25);
    }

    .form-control {
        transition: all 0.3s ease-in-out;
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3); /* Greyish glow for secondary button */
        transition: all 0.2s ease-in-out;
    }

    .btn-success:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(var(--bs-success-rgb), 0.3);
        transition: all 0.3s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="col-lg-11 col-xl-10 w-80">
        <div class="card shadow-lg border-0 card-animated">
            <div class="row g-0">
                <div class="col-lg-5 p-2 p-md-5 border-end">
                    <h3 class="mb-4 fw-light animated-item" style="animation-delay: 0.1s;"><i class="bi bi-person-lines-fill me-2"></i>Your Information</h3>
                    <form asp-action="FinalizeBooking" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="UnitId" />
                        <input type="hidden" asp-for="CheckInDate" />
                        <input type="hidden" asp-for="Nights" />
                        <input type="hidden" asp-for="CheckOutDate" />
                        <input type="hidden" asp-for="TotalCost" />

                        <div class="form-floating mb-3 animated-item" style="animation-delay: 0.2s;">
                            <input asp-for="Name" class="form-control" placeholder="Full Name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 animated-item" style="animation-delay: 0.3s;">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" />
                            <label asp-for="Email">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 animated-item" style="animation-delay: 0.4s;">
                            <input asp-for="Phone" class="form-control" placeholder="Phone Number (Optional)" />
                            <label asp-for="Phone">Phone Number (Optional)</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="d-grid animated-item" style="animation-delay: 0.5s;">
                            <button type="submit" class="btn btn-success btn-lg fw-bold py-3">
                                <i class="bi bi-credit-card-fill me-2"></i>Proceed to Payment
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3 animated-item" style="animation-delay: 0.6s;">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary text-body-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Home
                        </a>
                    </div>
                </div>

                <div class="col-lg-7 p-4 p-md-5">
                    <h3 class="mb-4 fw-light animated-item" style="animation-delay: 0.1s;"><i class="bi bi-card-list me-2"></i>Booking Summary</h3>
                    @if (Model.Unit != null)
                    {
                        <div class="row g-3 animated-item" style="animation-delay: 0.2s;">
                            <div class="col-md-5">
                                <img src="@Model.Unit.ImageUrl" class="img-fluid rounded shadow-sm h-100" style="object-fit: cover;" alt="@Model.Unit.Name">
                            </div>
                            <div class="col-md-7">
                                <h4 class="fw-bold">@Model.Unit.Name</h4>
                                <p class="text-body-secondary">@Model.Unit.Description</p>
                            </div>
                        </div>
                        <hr class="my-4 animated-item" style="animation-delay: 0.3s;">
                    }

                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.4s;">
                            <span class="text-body-secondary"><i class="bi bi-box-arrow-in-right me-2"></i>Check-in</span>
                            <span class="fw-bold">@Model.CheckInDate.ToLongDateString()</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.5s;">
                            <span class="text-body-secondary"><i class="bi bi-box-arrow-left me-2"></i>Check-out</span>
                            <span class="fw-bold">@Model.CheckOutDate.ToLongDateString()</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.6s;">
                            <span class="text-body-secondary"><i class="bi bi-moon-stars-fill me-2"></i>Stay</span>
                            <span class="fw-bold">@Model.Nights Night@(@Model.Nights > 1 ? "s" : "")</span>
                        </div>
                    </div>

                    <hr class="my-4 animated-item" style="animation-delay: 0.7s;">

                    <div class="d-flex justify-content-between align-items-center p-3 rounded animated-item" style="background-color: var(--bs-body-bg); animation-delay: 0.8s;">
                        <span class="h5 mb-0 fw-normal">Total Cost</span>
                        <span class="h4 mb-0 fw-bold text-success">@Model.TotalCost.ToString("C")</span>
                    </div>

                    <div class="alert alert-warning text-center mt-4 animated-item" role="alert" style="animation-delay: 0.9s;">
                        <i class="bi bi-hourglass-split me-2"></i>
                        This booking is held for: <strong id="countdown-timer">05:00</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            let timeLeft = 3 * 60; 
            const timerElement = document.getElementById('countdown-timer');
            const homeUrl = '@Url.Action("Index", "Home")'; 

            const countdownInterval = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    window.location.href = homeUrl;
                } else {
                    timeLeft--;
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;

                    if (timerElement) {
                        timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    }
                }
            }, 1000); // Run every second
        });
    </script>
}