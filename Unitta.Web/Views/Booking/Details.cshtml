@using Unitta.Application.Utility
@model BookingDto
@{
    ViewData["Title"] = $"Booking Details - {Model.Id}";

    var statusClass = Model.Status switch
    {
        SD.StatusApproved => "bg-success",
        SD.StatusPending => "bg-warning text-dark",
        SD.StatusCancelled => "bg-danger",
        SD.StatusCheckIn => "bg-primary",
        SD.StatusCompleted => "bg-info text-dark",
        _ => "bg-secondary"
    };
}

<style>
    .card-animated {
        animation: fadeInUp 0.7s ease-out forwards;
    }

    .animated-item {
        opacity: 0;
        animation: fadeInUp 0.6s ease-out forwards;
    }

    .info-label {
        color: var(--bs-secondary-color);
        font-size: 0.9rem;
    }

    .info-value {
        font-weight: 500;
        font-size: 1.05rem;
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        transition: all 0.2s ease-in-out;
    }

    .btn-download:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(13, 202, 240, 0.3);
        transition: all 0.2s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="col-lg-11 col-xl-10 w-80">
        <div class="card shadow-lg border-0 card-animated">
            <div class="row g-0">

                <div class="col-lg-5 p-4 p-md-5 border-end">
                    <h3 class="mb-4 fw-light animated-item" style="animation-delay: 0.1s;"><i class="bi bi-person-badge me-2"></i>Customer & Status</h3>

                    <div class="d-flex flex-column gap-3">
                        <div class="animated-item" style="animation-delay: 0.2s;">
                            <div class="info-label">Customer Name</div>
                            <div class="info-value">@Model.Name</div>
                        </div>
                        <div class="animated-item" style="animation-delay: 0.3s;">
                            <div class="info-label">Email</div>
                            <div class="info-value">@Model.Email</div>
                        </div>
                        <div class="animated-item" style="animation-delay: 0.4s;">
                            <div class="info-label">Phone</div>
                            <div class="info-value">@(Model.Phone ?? "Not Provided")</div>
                        </div>
                    </div>

                    <hr class="my-4 animated-item" style="animation-delay: 0.5s;">

                    <h5 class="mb-3 fw-light animated-item" style="animation-delay: 0.5s;"><i class="bi bi-clipboard2-check me-2"></i>Booking Status</h5>
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.6s;">
                            <span class="info-label">Booking ID</span>
                            <span class="info-value">#@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.7s;">
                            <span class="info-label">Status</span>
                            <span class="badge fs-6 @statusClass">@Model.Status</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.8s;">
                            <span class="info-label">Payment</span>
                            @if (Model.IsPaymentSuccessful)
                            {
                                <span class="text-success fw-bold"><i class="bi bi-check-circle-fill me-1"></i>Paid</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold"><i class="bi bi-x-circle-fill me-1"></i>Not Paid</span>
                            }
                        </div>
                        @if (Model.IsPaymentSuccessful && User.IsInRole(SD.Role_Admin))
                        {
                            <div class="animated-item" style="animation-delay: 0.9s;">
                                <div class="info-label">Stripe Session ID</div>
                                <div class="info-value text-muted" style="font-size: 0.9rem; word-break: break-all;">@(Model.StripeSessionId ?? "N/A")</div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4 pt-3 animated-item d-flex flex-column gap-2" style="animation-delay: 1s;">
                        <!-- Download Button - Only for Admins -->
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <a asp-action="DownloadBookingDetails" asp-route-bookingId="@Model.Id" class="btn btn-info btn-download text-white">
                                <i class="bi bi-download me-2"></i>Download Booking Details
                            </a>
                        }

                        <a asp-action="Index" class="btn btn-outline-secondary text-body-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Booking List
                        </a>
                    </div>
                </div>

                <div class="col-lg-7 p-4 p-md-5">
                    <h3 class="mb-4 fw-light animated-item" style="animation-delay: 0.1s;"><i class="bi bi-calendar3 me-2"></i>Unit & Stay Details</h3>
                    @if (Model.Unit != null)
                    {
                        <div class="row g-3 animated-item" style="animation-delay: 0.2s;">
                            <div class="col-md-5">
                                <img src="@Model.Unit.ImageUrl" class="img-fluid rounded shadow-sm h-100" style="object-fit: cover;" alt="@Model.Unit.Name">
                            </div>
                            <div class="col-md-7">
                                <h4 class="fw-bold">@Model.Unit.Name</h4>
                                <p class="text-body-secondary">Unit Number: <strong>@Model.UnitNumber</strong></p>
                            </div>
                        </div>
                        <hr class="my-4 animated-item" style="animation-delay: 0.3s;">
                    }

                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.4s;">
                            <span class="text-body-secondary"><i class="bi bi-box-arrow-in-right me-2"></i>Check-in</span>
                            <span class="fw-bold">@Model.CheckInDate.ToLongDateString()</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.5s;">
                            <span class="text-body-secondary"><i class="bi bi-box-arrow-left me-2"></i>Check-out</span>
                            <span class="fw-bold">@Model.CheckOutDate.ToLongDateString()</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.6s;">
                            <span class="text-body-secondary"><i class="bi bi-moon-stars-fill me-2"></i>Stay</span>
                            <span class="fw-bold">@Model.Nights Night@(@Model.Nights > 1 ? "s" : "")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.7s;">
                            <span class="text-body-secondary"><i class="bi bi-calendar-check me-2"></i>Actual Check-in</span>
                            <span class="fw-bold">@(Model.ActualCheckInDate?.ToString("g") ?? "Pending")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center animated-item" style="animation-delay: 0.8s;">
                            <span class="text-body-secondary"><i class="bi bi-calendar-x me-2"></i>Actual Check-out</span>
                            <span class="fw-bold">@(Model.ActualCheckOutDate?.ToString("g") ?? "Pending")</span>
                        </div>
                    </div>

                    <hr class="my-4 animated-item" style="animation-delay: 0.9s;">

                    <div class="d-flex justify-content-between align-items-center p-3 rounded animated-item" style="background-color: var(--bs-body-bg); animation-delay: 1s;">
                        <span class="h5 mb-0 fw-normal">Total Cost</span>
                        <span class="h4 mb-0 fw-bold text-success">@Model.TotalCost.ToString("C")</span>
                    </div>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <div class="form-group pt-2 pt-md-4">
                            @if (Model.Status == SD.StatusApproved)
                            {
                                <form asp-action="CheckIn" method="post">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="UnitNumber" />
                                    <button type="submit" class="btn btn-warning form-control my-1">
                                        <i class="bi bi-check2-square"></i> Check In
                                    </button>
                                </form>
                            }
                            @if (Model.Status == SD.StatusCheckIn)
                            {
                                <form asp-action="CheckOut" method="post">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="UnitNumber" />
                                    <button type="submit" class="btn btn-success form-control my-1">
                                        <i class="bi bi-clipboard2-square"></i> Check Out /CompleteBooking
                                    </button>
                                </form>
                            }
                        </div>
                    }

                    @if (Model.Status == SD.StatusApproved || Model.Status == SD.StatusPending || Model.Status == SD.StatusCancelled || Model.Status == SD.StatusCompleted)
                    {
                        <div class="form-group pt-2">
                            <form asp-action="CancelBooking" method="post">
                                <input type="hidden" asp-for="Id" />
                                @{
                                    var isCancelDisabled = Model.Status == SD.StatusCancelled || Model.Status == SD.StatusCompleted;
                                    var cancelButtonText = Model.Status == SD.StatusCancelled ? "Booking Cancelled" : "Cancel Booking";
                                    var cancelButtonClass = isCancelDisabled ? "btn btn-secondary form-control" : "btn btn-danger form-control";
                                }
                                <button type="submit" class="@cancelButtonClass" disabled="@isCancelDisabled">
                                    <i class="bi bi-x-circle"></i> @cancelButtonText
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_Notification" />
    }
}